{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "noEmit": true,
    "types": ["@types/node", "@types/jest", "@nuxt/types"]
  },
  "includes": ["lib/**/*.ts"]
}
